<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

   <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
    </style>
    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
        <item name="android:scaleX">.5</item>
        <item name="android:scaleY">.5</item>
        <item name="android:max">5</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:transformPivotY">0dp</item>
        <item name="android:layout_alignLeft">@+id/tv_name</item>
    </style>

</resources>
