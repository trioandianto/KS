<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_management"
    android:layout_width="match_parent"
    android:background="@color/light_grey"
    android:layout_height="match_parent"
    tools:context="com.kliksembuh.ks.ProfileManagementActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/relativeLayout"
        android:background="@color/light_grey"
        android:layout_height="220dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:border_width="1dp"
            android:id="@+id/profile_image"
            app:border_color="#FF000000"
            android:layout_gravity="center">
        </de.hdodenhof.circleimageview.CircleImageView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/cameraupload"
            android:src="@drawable/camera"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/profile_image" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/relativeLayout2"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textSize="18dp"
            android:textColor="@color/blue"
            android:id="@+id/tvEditProfileManagement"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:id="@+id/tvNameProfileManagement"
            android:layout_below="@+id/tvEditProfileManagement"
            android:layout_height="wrap_content"
            android:text="Annisa Mutiara"/>
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmailProfileManagement"
            android:layout_below="@+id/tvNameProfileManagement"
            android:text="annisamutiara@gmail.com"/>
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:id="@+id/tvnopeProfileManagement"
            android:layout_below="@+id/tvEmailProfileManagement"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="081801020304"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeLayout3"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:typeface="monospace"
            android:layout_height="wrap_content"
            android:text="Ganti Password"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tvgantipassword" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeLayout4"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textSize="18dp"
            android:textColor="@color/blue"
            android:id="@+id/tvEditVitalSignProfileManagement"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:id="@+id/tvWeightProfileManagement"
            android:layout_below="@+id/tvEditVitalSignProfileManagement"
            android:layout_height="wrap_content"
            android:text="Weight :"/>
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetakjantungProfileManagement"
            android:layout_below="@+id/tvWeightProfileManagement"
            android:text="Detak Jantung :"/>
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:id="@+id/tvTekananDarahProfileManagement"
            android:layout_below="@+id/tvDetakjantungProfileManagement"
            android:layout_height="wrap_content"
            android:text="Tekanan Darah :"/>
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:id="@+id/tvTemperaturProfileManagement"
            android:layout_below="@+id/tvTekananDarahProfileManagement"
            android:layout_height="wrap_content"
            android:text="Temperatur :"/>
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:typeface="monospace"
            android:id="@+id/tvDenyutNadiProfileManagement"
            android:layout_below="@+id/tvTemperaturProfileManagement"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Denyut Nadi :"/>

    </RelativeLayout>

</RelativeLayout>