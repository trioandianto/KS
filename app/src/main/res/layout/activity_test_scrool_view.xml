<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_backdrop_height"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:id="@+id/backdrop">
            </android.support.v4.view.ViewPager>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@id/appbar"
        android:src="@drawable/ic_favorite_white_24dp"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/mapdoctorlistcoba"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/dplistdokter"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:spinnerMode="dropdown">

                </Spinner>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin"
                    android:layout_marginTop="@dimen/card_margin">

                    <TextView
                        android:id="@+id/tv_drname1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/iv_doc_pic1"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic1"
                        android:layout_toRightOf="@+id/iv_doc_pic1"
                        android:text="dr. Ilma Surya"
                        android:textColor="@color/blue_a400"
                        android:textSize="20dp" />

                    <RatingBar
                        android:id="@+id/ratingBar1"
                        style="@style/CustomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_drname1"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic1"
                        android:layout_toRightOf="@+id/iv_doc_pic1"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="3.5"
                        android:stepSize="0.5" />

                    <TextView
                        android:id="@+id/tv_specialty1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ratingBar1"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic1"
                        android:layout_toRightOf="@+id/iv_doc_pic1"
                        android:text="Dokter Umum"
                        android:textColor="#5C5C5C"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_specialty1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic1"
                        android:layout_toRightOf="@+id/iv_doc_pic1"
                        android:drawableLeft="@drawable/ic_date_range_blue_14dp"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_date_range_blue_14dp"
                        android:text="Senin - Jumat"
                        android:textColor="#5C5C5C"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_calendar"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/iv_doc_pic1"
                        android:layout_toRightOf="@+id/iv_doc_pic1"
                        android:drawableLeft="@drawable/ic_access_time_blue_14dp"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_access_time_blue_14dp"
                        android:text="09.00 - 14.00"
                        android:textColor="#5C5C5C"
                        android:textSize="14dp" />


                    <ImageView
                        android:id="@+id/iv_doc_pic1"
                        android:layout_width="250px"
                        android:layout_height="300px"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/linearLayout2"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/dr_ilma_suraya" />

                    <Button
                        android:id="@+id/bookBtn1"
                        style="@style/MyCustomTextAppearance"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_alignBottom="@+id/iv_doc_pic1"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape"
                        android:backgroundTint="@color/login_color"
                        android:text="BOOK"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvdoktera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin"
                    android:layout_marginTop="@dimen/card_margin">

                    <TextView
                        android:id="@+id/tv_drname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/iv_doc_pic"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic"
                        android:layout_toRightOf="@+id/iv_doc_pic"
                        android:text="dr. Indah Kusuma"
                        android:textColor="@color/blue_a400"
                        android:textSize="20dp" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/CustomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_drname"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic"
                        android:layout_toRightOf="@+id/iv_doc_pic"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="3.5"
                        android:stepSize="0.5" />

                    <TextView
                        android:id="@+id/tv_specialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ratingBar"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic"
                        android:layout_toRightOf="@+id/iv_doc_pic"
                        android:text="Dokter Umum"
                        android:textColor="#5C5C5C"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_calendar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_specialty"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic"
                        android:layout_toRightOf="@+id/iv_doc_pic"
                        android:drawableLeft="@drawable/ic_date_range_blue_14dp"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_date_range_blue_14dp"
                        android:text="Senin - Jumat"
                        android:textColor="#5C5C5C"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_clock2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_calendar2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/iv_doc_pic"
                        android:layout_toRightOf="@+id/iv_doc_pic"
                        android:drawableLeft="@drawable/ic_access_time_blue_14dp"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_access_time_blue_14dp"
                        android:text="09.00 - 14.00"
                        android:textColor="#5C5C5C"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_doc_pic"
                        android:layout_width="250px"
                        android:layout_height="300px"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/linearLayout2"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/dr_indah_kusuma" />

                    <Button
                        android:id="@+id/bookBtn2"
                        style="@style/MyCustomTextAppearance"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_alignBottom="@+id/iv_doc_pic"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape"
                        android:backgroundTint="@color/login_color"
                        android:text="BOOK"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin"
                    android:layout_marginTop="@dimen/card_margin">

                    <TextView
                        android:id="@+id/tv_drname2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/iv_doc_pic2"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic2"
                        android:layout_toRightOf="@+id/iv_doc_pic2"
                        android:text="dr. Juniarty"
                        android:textColor="@color/blue_a400"
                        android:textSize="20dp" />

                    <RatingBar
                        android:id="@+id/ratingBar2"
                        style="@style/CustomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_drname2"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic2"
                        android:layout_toRightOf="@+id/iv_doc_pic2"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="3.5"
                        android:stepSize="0.5" />

                    <TextView
                        android:id="@+id/tv_specialty2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ratingBar2"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic2"
                        android:layout_toRightOf="@+id/iv_doc_pic2"
                        android:text="Dokter Umum"
                        android:textColor="#5C5C5C"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_calendar3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_specialty2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/iv_doc_pic2"
                        android:layout_toRightOf="@+id/iv_doc_pic2"
                        android:drawableLeft="@drawable/ic_date_range_blue_14dp"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_date_range_blue_14dp"
                        android:text="Senin - Jumat"
                        android:textColor="#5C5C5C"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_clock3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_calendar3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/iv_doc_pic2"
                        android:layout_toRightOf="@+id/iv_doc_pic2"
                        android:drawableLeft="@drawable/ic_access_time_blue_14dp"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_access_time_blue_14dp"
                        android:text="09.00 - 14.00"
                        android:textColor="#5C5C5C"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_doc_pic2"
                        android:layout_width="250px"
                        android:layout_height="300px"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/linearLayout2"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/drgigiayu" />

                    <Button
                        android:id="@+id/bookBtn3"
                        style="@style/MyCustomTextAppearance"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_alignBottom="@+id/iv_doc_pic2"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape"
                        android:backgroundTint="@color/login_color"
                        android:text="BOOK"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>