            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <fragment
                android:id="@+id/mapdoctorlistcoba"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/dplistdokter"

                    android:layout_height="?attr/actionBarSize"
                    android:spinnerMode="dropdown">

                </Spinner>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/card_margin"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_drname1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Dr. Ilma Surya"
                        android:textSize="20dp"
                        android:textColor="@color/blue"
                        android:layout_alignTop="@+id/iv_doc_pic1"
                        android:layout_toRightOf="@+id/iv_doc_pic1"
                        android:layout_toEndOf="@+id/iv_doc_pic1" />

                    <RatingBar
                        android:id="@+id/ratingBar1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style= "@style/CustomRatingBar"
                        android:numStars="5"
                        android:rating="3.5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:layout_below="@+id/tv_drname1"
                        android:layout_toRightOf="@+id/iv_doc_pic1"
                        android:layout_toEndOf="@+id/iv_doc_pic1" />

                    <TextView
                        android:id="@+id/tv_specialty1"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="Dokter Umum"
                        android:textSize="14dp"
                        android:textColor="#5C5C5C"
                        android:layout_below="@+id/ratingBar1"
                        android:layout_toRightOf="@+id/iv_doc_pic1"
                        android:layout_toEndOf="@+id/iv_doc_pic1" />

                    <ImageView
                        android:id="@+id/iv_doc_pic1"
                        android:layout_width="250px"
                        android:layout_height="300px"
                        android:src="@drawable/dr_ilma_suraya"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:layout_below="@+id/linearLayout2"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>


