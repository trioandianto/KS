<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_backdrop_height"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:id="@+id/backdrop">
            </android.support.v4.view.ViewPager>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@id/appbar"
        android:src="@drawable/ic_favorite_white_24dp"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/nsDokter"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/ivHospitalIcon"
                    android:padding="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_hospital"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/tvHospitalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivHospitalIcon"
                    android:padding="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    style="@style/MyCustomTextAppearance"
                    android:textSize="18sp"
                    android:textColor="@color/dark_purple"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/ivMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_place_blue_a400_alpha_24dp"
                    android:drawableStart="@drawable/ic_place_blue_a400_alpha_24dp"
                    android:drawablePadding="2dp"
                    android:scaleType="fitXY"
                    android:text="Lihat di peta"
                    android:textColor="@color/blue"
                    android:textSize="11sp"
                    android:clickable="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignBaseline="@+id/tvHospitalName"
                    android:layout_toEndOf="@+id/tvHospitalName"/>
                <TextView
                    android:id="@+id/tv_IGDHospital"
                    android:background="#7057ff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_width="49dp"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/tvHospitalName"
                    android:layout_below="@+id/tvHospitalName"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="5dp"
                    android:text="IGD"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/tv_24hours"
                    android:background="@color/google_color"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_width="49dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/tvHospitalName"
                    android:layout_toRightOf="@+id/tv_IGDHospital"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="15dp"
                    android:text="24"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:gravity="center_horizontal|center_vertical">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Layanan"
                    android:gravity="left"
                    android:padding="8dp"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/ic_format_list_bulleted_black_24dp"
                    android:drawableLeft="@drawable/ic_format_list_bulleted_black_24dp"
                    android:text="50"
                    android:textSize="13dp"
                    android:textColor="#df4056"/>
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/lbl_Layanan"
                    android:layout_marginTop="25dp"
                    android:gravity="left"
                    android:text="Layanan"
                    android:textColor="@color/grey_light"
                    android:textSize="14sp"/>
                <View
                    android:id="@+id/line_Layanan"
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/tv_Layanan"
                    android:background="@color/light_grey"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Penilaian"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/ic_sentiment_satisfied_24dp"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/ic_sentiment_satisfied_24dp"
                    android:layout_toRightOf="@+id/line_Layanan"
                    android:text="100"
                    android:textSize="13dp"
                    android:textColor="#df4056"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/lbl_Penilaian"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/line_Layanan"
                    android:gravity="left"
                    android:text="Penilaian"
                    android:textColor="@color/grey_light"
                    android:textSize="14sp"/>
                <View
                    android:id="@+id/line_Rekanan"
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/tv_Penilaian"
                    android:background="@color/light_grey"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Rekanan"
                    android:gravity="left"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/ic_sentiment_satisfied_24dp"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/ic_domain_black_24dp"
                    android:layout_toRightOf="@+id/line_Rekanan"
                    android:text="50"
                    android:textSize="13dp"
                    android:textColor="#df4056"/>
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_Rekanan"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/line_Rekanan"
                    android:gravity="left"
                    android:text="Rekanan Asuransi"
                    android:textColor="@color/grey_light"
                    android:textSize="14sp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <View
                    android:id="@+id/line_Fasilitas"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/light_grey"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLihatFasilitas"
                    android:clickable="true"
                    android:text="Lihat Fasilitas Lainnya"
                    android:layout_below="@id/line_Fasilitas"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:gravity="center"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customborder"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lbl_Liked"
                        android:gravity="left"
                        android:padding="8dp"
                        android:drawablePadding="6dp"
                        android:drawableLeft="@drawable/ic_favorite_24dp"
                        android:text="Suka"
                        android:textSize="13dp"
                        android:textColor="#5C5C5C"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_Liked"
                        android:gravity="left"
                        android:padding="8dp"
                        android:layout_toRightOf="@id/lbl_Liked"
                        android:text="50"
                        android:textSize="13dp"
                        android:textColor="@color/grey_light"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/customborder">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_KirimPesan"
                        android:gravity="left"
                        android:padding="8dp"
                        android:drawablePadding="6dp"
                        android:drawableLeft="@drawable/ic_chat_black_24dp"
                        android:text="Kirim Pesan"
                        android:textSize="13dp"
                        android:textColor="@color/grey_light"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/customborder">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_ShareHospital"
                        android:gravity="left"
                        android:padding="8dp"
                        android:drawablePadding="6dp"
                        android:drawableLeft="@drawable/ic_share_black_24dp"
                        android:text="Bagikan"
                        android:textSize="13dp"
                        android:textColor="@color/grey_light"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:background="#d4157e">
                <RelativeLayout
                    android:id="@+id/relSpinner"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="#eb2698"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/spn_SpecialtyDoc"
                        android:gravity="left"
                        android:background="@drawable/shape"
                        android:backgroundTint="@color/colorPrimary"
                        android:popupBackground="#ffffff"
                        android:textSize="13dp"
                        android:spinnerMode="dialog"
                        android:clipToPadding="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="2dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/drop_white" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="6dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_FilterDoc"
                        android:text="Filter"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/ic_sort_black_16dp"
                        android:drawableStart="@drawable/ic_sort_black_16dp"
                        android:gravity="center_vertical"
                        android:textAllCaps="false"
                        style="@style/MyCustomTextAppearance"
                        android:background="@drawable/shape"
                        android:backgroundTint="#eb2698"
                        android:padding="8dp"
                        android:inputType=""
                        android:maxLines="1"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:divider="#00000000"
                android:paddingRight="0dip"
                android:paddingLeft="10dip"
                android:paddingBottom="15dip"
                android:clipToPadding="false"
                android:background="@drawable/shape"
                android:layout_height="fill_parent"
                android:id="@+id/lvDetailRumahSakit">

            </ListView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>