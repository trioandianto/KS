<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <AutoCompleteTextView
            android:id="@+id/tvsearchspesialis"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"
            android:alpha="0.97"
            android:padding="5dp"
            android:drawableLeft="@drawable/places_ic_search"
            android:hint="Search"
            android:inputType=""
            android:maxLines="1"
            android:singleLine="true" />
        <AutoCompleteTextView
            android:id="@+id/tvsearchtypespesialis"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/places_ic_search"
            android:layout_margin="10dp"
            android:alpha="0.97"
            android:background="@drawable/shape"
            android:backgroundTint="@color/white"
            android:padding="5dp"
            android:hint="Pilih Pelayanan"
            android:inputType=""
            android:maxLines="1"
            android:singleLine="true" />

        <Button
            android:id="@+id/btnsearchpelayanan"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="@string/action_search"
            android:background="@drawable/shape"
            style="@style/MyCustomTextAppearance"
            android:backgroundTint="@color/login_color"/>
    </LinearLayout>


</RelativeLayout>