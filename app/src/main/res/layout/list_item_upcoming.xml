<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:background="@drawable/shape_listview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#9900ff00"
        android:paddingLeft="10dp" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_listview"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNoAppointmentHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="# 4123123"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvStatusHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/tvWaktuBerobat"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/ic_event_note_24dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_event_note_24dp"
            android:gravity="left"
            android:text="Menunggu Konfirmasi"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/tvBookSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStatusHistory"
            android:text="29 Jan 2019"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_access_time_blue_14dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_access_time_blue_14dp"
            android:layout_alignStart="@+id/tvWaktuBerobat"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tvWaktuBerobat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBookSchedule"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="95dp"
            android:background="@drawable/shape"
            android:padding="3dp"
            android:text="Pagi"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_below="@id/tvBookSchedule"
            android:layout_alignParentRight="true"
            android:layout_marginRight="51dp"
            android:padding="3dp"
            android:text="08.00"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lineTimeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_below="@id/tvBookSchedule"
            android:layout_alignParentRight="true"
            android:layout_marginRight="43dp"
            android:padding="3dp"
            android:text="-"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvTimeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBookSchedule"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:padding="3dp"
            android:text="11.00"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/ivDocPicHistory"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingLeft="1dp"
            android:paddingBottom="4dp"
            android:layout_below="@+id/tvNoAppointmentHistory"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvHistoryRumahSakit"
            style="@style/MyCustomTextAppearance"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="RS PMI BOGOR"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_place_blue_14dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_place_blue_14dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_below="@+id/tvNoAppointmentHistory"
            android:layout_alignStart="@+id/tv_Drname_History" />
        <TextView
            android:id="@+id/tv_Drname_History"
            style="@style/MyCustomTextAppearance"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHistoryRumahSakit"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivDocPicHistory"
            android:layout_toRightOf="@+id/ivDocPicHistory"
            android:text="dr. Trio"
            android:textColor="@color/blue_a400"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_SpecialtyHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Drname_History"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivDocPicHistory"
            android:layout_toRightOf="@+id/ivDocPicHistory"
            android:text="Dokter Umum"
            android:textColor="#5C5C5C"
            android:layout_marginBottom="20dp"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>