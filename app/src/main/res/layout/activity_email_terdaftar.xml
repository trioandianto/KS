<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kliksembuh.ks.EmailTerdaftarActivity">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tvEmailTerdaftar"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Akun annisamutiara@gmail.com sudah terdaftar."
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_border"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLupaPassword"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="Lupa Password ?"
            android:layout_marginBottom="20dp"
            android:textColor="@color/blue"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/ivLupaPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvLupaPassword"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

        <TextView
            android:id="@+id/tvmasukdengan"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="normal"
            android:layout_below="@+id/tvLupaPassword"
            android:text="Masuk dengan" />

        <TextView
            android:id="@+id/tvemailku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:layout_marginBottom="5dp"
            android:textSize="16dp"
            android:layout_below="@+id/tvmasukdengan"
            android:text="annisamutiara@gmail.com" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/ivEmail"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvemailku"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_alignTop="@+id/tvemailku" />


    </RelativeLayout>

</LinearLayout>
