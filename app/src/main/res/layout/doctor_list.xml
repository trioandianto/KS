<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:background="@drawable/shape_listview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#9900ff00"
        android:paddingLeft="10dp" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_listview"
        android:focusable="false"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_FrontTitleDr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyCustomTextAppearance"
            android:layout_alignTop="@+id/iv_doc_pic_list"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/iv_doc_pic_list"
            android:layout_toRightOf="@+id/iv_doc_pic_list"
            android:text="dr."
            android:textColor="@color/blue_a400"
            android:textSize="18sp" />

        <TextView
        android:id="@+id/tv_list_drname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyCustomTextAppearance"
        android:layout_alignTop="@+id/iv_doc_pic_list"
        android:layout_marginLeft="4dp"
        android:layout_toEndOf="@+id/tv_FrontTitleDr"
        android:layout_toRightOf="@+id/tv_FrontTitleDr"
        android:text="Name"
        android:textColor="@color/blue_a400"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_specialty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_list_drname"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/iv_doc_pic_list"
        android:layout_toRightOf="@+id/iv_doc_pic_list"
        android:text="MS. CSks."
        android:textColor="#5C5C5C"
        android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_tittle_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_specialty_list"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/iv_doc_pic_list"
            android:layout_toRightOf="@+id/iv_doc_pic_list"
            android:text="Dokter Umum"
            android:textColor="#5C5C5C"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btn_kualiifikasi"
            android:text="Lihat Kualifikasi"
            android:padding="10dp"
            android:clickable="true"
            android:background="@color/com_facebook_button_border_color_focused"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/iv_doc_pic_list"
            android:layout_below="@+id/tvAppointmentNow" />

    <TextView
        android:id="@+id/tvAppointmentNow"
        android:layout_width="75dp"
        android:layout_height="24dp"
        android:text="Book"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/tv_specialty_list"
        android:layout_marginTop="22dp"
        android:layout_marginRight="8dp"
        android:padding="4dp"
        android:gravity="center"
        android:background="#7057ff"
        android:layout_alignParentRight="true"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/iv_doc_pic_list"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:paddingLeft="1dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvFavouriteDoc"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_favorite_24dp"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_favorite_24dp"
        android:text="50"
        android:textSize="14dp"
        android:textColor="#5C5C5C"
        android:layout_below="@+id/iv_doc_pic_list"/>

    <!--<Button-->
        <!--android:id="@+id/bookBtn_list"-->
        <!--style="@style/MyCustomTextAppearance"-->
        <!--android:layout_width="70dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:background="@drawable/shape"-->
        <!--android:backgroundTint="@color/login_color"-->
