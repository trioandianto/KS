<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:background="@drawable/shape_listview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#9900ff00"
        android:paddingLeft="10dp" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_listview"
        android:focusable="false"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_FrontTitleDr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyCustomTextAppearance"
            android:layout_alignTop="@+id/iv_doc_pic_list"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/iv_doc_pic_list"
            android:layout_toRightOf="@+id/iv_doc_pic_list"
            android:text="dr."
            android:textColor="@color/blue_a400"
            android:textSize="18sp" />

        <TextView
        android:id="@+id/tv_list_drname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyCustomTextAppearance"
        android:layout_alignTop="@+id/iv_doc_pic_list"
        android:layout_marginLeft="4dp"
        android:layout_toEndOf="@+id/tv_FrontTitleDr"
        android:layout_toRightOf="@+id/tv_FrontTitleDr"
        android:text="Name"
        android:textColor="@color/blue_a400"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_specialty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_list_drname"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/iv_doc_pic_list"
        android:layout_toRightOf="@+id/iv_doc_pic_list"
        android:text="MS. CSks."
        android:textColor="#5C5C5C"
        android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_tittle_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_specialty_list"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/iv_doc_pic_list"
            android:layout_toRightOf="@+id/iv_doc_pic_list"
            android:text="Dokter Umum"
            android:textColor="#5C5C5C"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_kualiifikasi"
            android:text="Lihat Kualifikasi"
            android:padding="6dp"
            android:clickable="true"
            android:textSize="10sp"
            android:background="@color/divider_grey"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/iv_doc_pic_list"
            android:layout_below="@+id/tvAppointmentNow" />

    <TextView
        android:id="@+id/tvAppointmentNow"
        android:layout_width="75dp"
        android:layout_height="28dp"
        android:text="Book"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/tv_specialty_list"
        android:layout_marginTop="22dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:background="@drawable/shape"
        android:backgroundTint="#7057ff"
        android:layout_alignParentRight="true"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/iv_doc_pic_list"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:paddingLeft="1dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvFavDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_favorite_border_black_14dp"
            android:layout_below="@+id/iv_doc_pic_list"
            />

    <TextView
        android:id="@+id/tvValueOfFavDoc"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:text="0"
        android:textSize="14dp"
        android:textColor="#5C5C5C"
        android:layout_toRightOf="@id/tvFavDoc"
        android:layout_below="@+id/iv_doc_pic_list"/>
    </RelativeLayout>

</LinearLayout>