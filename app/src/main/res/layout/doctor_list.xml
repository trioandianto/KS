<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:background="@drawable/shape_listview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#9900ff00"
        android:paddingLeft="10dp" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_listview"
        android:focusable="false"
        android:weightSum="1">

    <TextView
        android:id="@+id/tv_list_drname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyCustomTextAppearance"
        android:layout_alignTop="@+id/iv_doc_pic_list"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/iv_doc_pic_list"
        android:layout_toRightOf="@+id/iv_doc_pic_list"
        android:text="dr. Name"
        android:textColor="@color/blue_a400"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_specialty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_list_drname"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/iv_doc_pic_list"
        android:layout_toRightOf="@+id/iv_doc_pic_list"
        android:text="Dokter Umum"
        android:textColor="#5C5C5C"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_calendar_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_specialty_list"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/iv_doc_pic_list"
        android:layout_toRightOf="@+id/iv_doc_pic_list"
        android:drawableLeft="@drawable/ic_date_range_blue_14dp"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_date_range_blue_14dp"
        android:text="Senin - Jumat"
        android:textColor="#5C5C5C"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_clock_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_calendar_list"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/iv_doc_pic_list"
        android:layout_toRightOf="@+id/iv_doc_pic_list"
        android:drawableLeft="@drawable/ic_access_time_blue_14dp"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_access_time_blue_14dp"
        android:text="09.00 - 14.00"
        android:textColor="#5C5C5C"
        android:textSize="14dp" />


    <ImageView
        android:id="@+id/iv_doc_pic_list"
        android:layout_width="100dp"
        android:layout_height="142dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

