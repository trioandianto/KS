<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:divider="#00000000"
        android:paddingRight="0dip"
        android:paddingLeft="10dip"
        android:paddingBottom="15dip"
        android:clipToPadding="false"
        android:background="@drawable/shape"
        android:layout_height="wrap_content"
        android:id="@+id/lvHistoryCompleted">
    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/rvImageHistoryComplete"
        android:layout_below="@+id/lvHistoryCompleted"
        android:layout_gravity="center|center_horizontal|center_vertical">

        <ImageView
            android:id="@+id/ivPicNotFoundsHCompleted"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvScheduleNotFoundsHCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivPicNotFoundsHCompleted"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="#5C5C5C"
            android:textSize="12sp"
            android:textStyle="normal" />

    </RelativeLayout>
</LinearLayout>
