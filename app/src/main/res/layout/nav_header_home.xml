<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/welcome3"
    android:orientation="horizontal"
    android:fitsSystemWindows="false"
    android:theme="@style/AppTheme.NoActionBar">

    <RelativeLayout
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_marginTop="10dp"
        android:id="@+id/image"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/profile_image"
            app:border_color="#FF000000"
            android:layout_marginLeft="24dp"
            android:src="@drawable/dr_tengku_nissa"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:layout_toRightOf="@+id/image"
        android:id="@+id/datadiri"
        android:layout_height="120dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/profile_email"
            android:layout_height="wrap_content"
            android:text="tiara@basajans.com"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/profile_nohp"
            android:layout_below="@+id/profile_email"
            android:layout_height="wrap_content"
            android:text="083847753823"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:id="@+id/edit_datadiri"
            android:clickable="true"
            android:onClick="onClick"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:text="Edit Profile"
            android:textColor="@color/blue_a400"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/profile_name"
            android:layout_marginLeft="24dp"
            android:text="Hi, Tiara"
            android:textSize="16dp"/>
    </RelativeLayout>

</RelativeLayout>
