<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/light_grey_bg"
    android:orientation="horizontal"
    android:fitsSystemWindows="false"
    android:theme="@style/AppTheme.NoActionBar">

    <RelativeLayout
        android:layout_height="130dp"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:id="@+id/rel_LayoutHeader"
        android:orientation="vertical"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_centerHorizontal="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/profile_image"
            app:border_color="#FF000000"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/profile_picture"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/profile_image">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvProfile_FName"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:drawablePadding="8dp"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvProfile_LName"
                android:layout_height="20dp"
                android:textColor="#333333"
                android:clickable="true"
                android:layout_marginLeft="2dp"
                android:onClick="onClick"
                android:layout_toRightOf="@id/tvProfile_FName"
                android:drawableRight="@drawable/ic_create_black_24dp"
                android:drawablePadding="8dp"
                android:textSize="16dp"/>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_LayoutHeader">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Tensi"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Tensi :"
            android:textSize="14sp"
            android:textColor="#df4056"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ValueOfTensi"
            android:layout_toRightOf="@id/tv_Tensi"
            android:gravity="left"
            android:text="-"
            android:layout_marginLeft="38dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp"/>
        <View
            android:id="@+id/line_Vert"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_centerHorizontal="true"
            android:background="@color/cardview_dark_background"/>

        <View
            android:id="@+id/line_Horz"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@color/cardview_dark_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Pernafasan"
            android:layout_below="@+id/tv_Tensi"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Pernafasan :"
            android:textSize="14sp"
            android:textColor="#ff9f53"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ValueOfPernafasan"
            android:layout_below="@id/tv_Tensi"
            android:layout_toRightOf="@id/tv_Pernafasan"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:text="-"
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_SuhuTubuh"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="60dp"
            android:text="Suhu Tubuh :"
            android:textSize="14sp"
            android:textColor="#607dfa"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ValueOfSuhuTubuh"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="-"
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Nadi"
            android:layout_below="@id/tv_SuhuTubuh"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="63dp"
            android:layout_marginBottom="5dp"
            android:text="Pernafasan :"
            android:textSize="14sp"
            android:textColor="#489d58"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ValueOfNadi"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_SuhuTubuh"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="-"
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp"/>


    </RelativeLayout>

</RelativeLayout>
