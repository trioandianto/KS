<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/welcome3"
    android:orientation="horizontal"
    android:fitsSystemWindows="false"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:theme="@style/AppTheme.NoActionBar">

    <RelativeLayout
        android:layout_width="150dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/image"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_height="120dp"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/profile_image"
            app:border_color="#FF000000"
            android:layout_marginLeft="24dp"
            android:src="@drawable/dr_tengku_nissa"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:layout_toRightOf="@+id/image"
        android:id="@+id/datadiri"
        android:layout_height="120dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/profile_email"
            android:layout_height="wrap_content"
            android:text="tiara@basajans.com"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/profile_nohp"
            android:layout_below="@+id/profile_email"
            android:layout_height="wrap_content"
            android:text="083847753823"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/profile_name"
            android:text="Hi, Tiara"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/edit_datadiri"
            android:layout_alignBottom="@+id/edit_datadiri"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/edit_datadiri"
            android:layout_toRightOf="@+id/profile_name"
            android:drawableRight="@drawable/ic_create_black_24dp"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>
