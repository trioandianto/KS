<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/light_grey_bg"
    android:orientation="horizontal"
    android:fitsSystemWindows="false"
    android:theme="@style/AppTheme.NoActionBar">

    <RelativeLayout
        android:layout_height="130dp"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:id="@+id/rel_LayoutHeader"
        android:orientation="vertical"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/profile_image"
            app:border_color="#FF000000"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/profile_picture"
            android:layout_centerInParent="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@id/profile_image">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvProfile_FName"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:drawablePadding="8dp"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvProfile_LName"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:clickable="true"
                android:layout_marginLeft="2dp"
                android:onClick="onClick"
                android:layout_toRightOf="@id/tvProfile_FName"
                android:drawableRight="@drawable/ic_create_black_24dp"
                android:drawablePadding="8dp"
                android:textSize="16dp"/>

        </RelativeLayout>

    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/image">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_Tensi"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="Tensi"
                android:textSize="11dp"
                android:textColor="#df4056"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_ValueOfTensi"
                android:layout_below="@id/tv_Tensi"
                android:gravity="center"
                android:text="119/70 \n mmHG"
                android:textSize="14sp"/>
            <View
                android:id="@+id/line_Tensi"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="25dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/tv_Tensi"
                android:background="@color/cardview_dark_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_Pernafasan"
                android:layout_toRightOf="@id/line_Tensi"
                android:layout_marginBottom="5dp"
                android:text="Pernafasan"
                android:textSize="11dp"
                android:textColor="#ff9f53"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ValueOfPernafasan"
                android:layout_below="@id/tv_Pernafasan"
                android:layout_toRightOf="@id/line_Tensi"
                android:gravity="center"
                android:text="119/70 \n mmHG"
                android:textSize="14sp"/>
            <View
                android:id="@+id/line_Pernafasan"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/tv_Pernafasan"
                android:background="@color/cardview_dark_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_SuhuTubuh"
                android:layout_toRightOf="@id/line_Pernafasan"
                android:layout_marginBottom="5dp"
                android:text="Suhu Tubuh"
                android:textSize="11dp"
                android:textColor="#607dfa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ValueOfSuhuTubuh"
                android:layout_below="@id/tv_SuhuTubuh"
                android:layout_toRightOf="@id/line_Pernafasan"
                android:gravity="center"
                android:text="119/70 \n mmHG"
                android:textSize="14sp"/>
            <View
                android:id="@+id/line_TvSuhuTubuh"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/tv_SuhuTubuh"
                android:background="@color/cardview_dark_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_Nadi"
                android:layout_toRightOf="@id/line_TvSuhuTubuh"
                android:layout_marginBottom="5dp"
                android:text="Pernafasan"
                android:textSize="11dp"
                android:textColor="#489d58"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ValueOfNadi"
                android:layout_below="@id/tv_Nadi"
                android:layout_toRightOf="@id/line_TvSuhuTubuh"
                android:gravity="center"
                android:text="119/70 \n mmHG"
                android:textSize="14sp"/>
            <View
                android:id="@+id/line_TvNadi"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/tv_SuhuTubuh"
                android:background="@color/cardview_dark_background"/>

        </RelativeLayout>


    </HorizontalScrollView>

</RelativeLayout>
