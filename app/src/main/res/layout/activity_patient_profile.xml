<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview_patientProfile"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnAddNewPatientProf"
        style="@style/MyCustomTextAppearance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:padding="13dp"
        android:drawableLeft="@drawable/ic_add_circle_outline_black_24dp"
        android:drawablePadding="10dp"
        android:layout_below="@+id/listview_patientProfile"
        android:text="Tambah Profil Pasien Baru"
        android:gravity="left"
        android:textColor="@color/cardview_dark_background"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:onClick="onClick"/>
</RelativeLayout>