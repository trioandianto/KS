<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/iv_doc_picdetail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/dr_indah_kusuma"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/iv_doc_picdetail"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_margin="15dp"
                android:text="Pilih Hari :"
                android:textColor="#000000"/>

            <Spinner
                android:id="@+id/btnSenin"
                style="@style/MyCustomTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvText"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:layout_alignBaseline="@id/tvText"
                android:textStyle="bold"
                android:entries="@array/day_name"/>

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnMingguDepan"
            style="@style/MyCustomTextAppearance"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:text="Minggu Depan"
            android:textStyle="bold"
            android:background="@drawable/shape"
            android:backgroundTint="@color/signup_color"
            android:layout_toRightOf="@+id/btnMingguIni"
            android:layout_marginRight="5dp"
            android:layout_alignBaseline="@+id/btnMingguIni"/>
        <Button
            android:id="@+id/btnMingguIni"
            style="@style/MyCustomTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:text="Minggu Ini"
            android:textStyle="bold"
            android:background="@drawable/shape"
            android:backgroundTint="@color/signup_color"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/tvText"
            android:layout_alignParentStart="true" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:background="@color/light_grey"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="08.00 - 10.00"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/light_grey"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="13.00 - 16.00"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/light_grey"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="19.00 - 21.00"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <ListView
            android:id="@+id/listview_timeSlot"
            android:layout_below="@+id/btnMingguIni"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_drname_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="dr. Indah Kusuma"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_doc_picdetail" />

    <TextView
        android:id="@+id/tv_drspecialty_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Dokter Umum"
        android:textSize="14dp"
        android:textColor="#5C5C5C"
        android:layout_below="@+id/tv_drname_detail"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/iv_doc_picdetail" />

    <com.kliksembuh.ks.models.MaterialFavoriteButton
        android:id="@+id/favorite_nice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:mfb_rotation_duration="400"
        app:mfb_rotation_angle="216"
        app:mfb_bounce_duration="700" />

</RelativeLayout>
