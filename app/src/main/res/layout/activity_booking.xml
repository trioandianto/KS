<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingRight="15dp" >
    <ImageView
        android:id="@+id/iv_doc_picdetail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_drname_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_doc_picdetail" />

    <TextView
        android:id="@+id/tv_drspecialty_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Specialty"
        android:textSize="14dp"
        android:textColor="#5C5C5C"
        android:layout_below="@+id/tv_drname_detail"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/iv_doc_picdetail" />

    <com.kliksembuh.ks.models.MaterialFavoriteButton
        android:id="@+id/favorite_nice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:mfb_rotation_duration="400"
        app:mfb_rotation_angle="216"
        app:mfb_bounce_duration="700" />

</RelativeLayout>
