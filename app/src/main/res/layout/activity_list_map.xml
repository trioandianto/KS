<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbarListMaps"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            android:layout_height="?actionBarSize">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tab"
        android:layout_margin="1dp"
        android:layout_below="@+id/appbar"
        android:padding="1dp"
        android:background="@color/bluegrayopacity"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:layout_width="160dp"
            android:text="List"
            style="@style/MyCustomTextAppearance"
            android:id="@+id/btnlist"
            android:drawableLeft="@drawable/ic_view_list_black_24dp"
            android:drawableStart="@drawable/ic_view_list_black_24dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:drawablePadding="18dp"
            android:padding="8dp"
            android:inputType=""
            android:maxLines="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:singleLine="true"/>

        <Button
            android:id="@+id/btnfilter"
            android:layout_width="match_parent"
            android:text="Urutkan Berdasarkan"
            android:layout_marginLeft="2dp"
            android:textAllCaps="false"
            android:layout_toRightOf="@id/btnlist"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_sorting_black_24dp"
            android:drawableStart="@drawable/ic_sorting_black_24dp"
            android:drawablePadding="18dp"
            style="@style/MyCustomTextAppearance"
            android:background="@color/white"
            android:padding="8dp"
            android:inputType=""
            android:maxLines="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:singleLine="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_ListMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab">
        <View
            android:id="@+id/line_pink"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@drawable/line_color"
            />

    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_below="@id/rel_ListMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></fragment>
</RelativeLayout>
