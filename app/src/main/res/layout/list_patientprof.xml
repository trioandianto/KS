<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:background="@drawable/shape_listview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#9900ff00"
        android:paddingLeft="10dp" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_listview"
        android:focusable="false"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvListPatientProfName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyCustomTextAppearance"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Sofi Fitria"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tvListPatientProfStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvListPatientProfName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Anak"
            android:textColor="#5C5C5C"
            android:textSize="14dp" />

    </RelativeLayout>

</LinearLayout>