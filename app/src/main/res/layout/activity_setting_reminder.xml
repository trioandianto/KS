<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lin_LayoutReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/wallet_bright_foreground_holo_dark"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:id="@+id/lblCurrent"
            android:text="Current"
            android:textSize="12sp"
            android:textColor="#5C5C5C"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/lin_LayoutReminder"
        android:divider="#00000000"
        android:paddingRight="0dip"
        android:paddingLeft="10dip"
        android:paddingBottom="15dip"
        android:clipToPadding="false"
        android:layout_height="wrap_content"
        android:id="@+id/listview_reminder">
    </ListView>

    <Button
        android:id="@+id/btn_addReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/listview_reminder"
        android:layout_alignParentStart="true"
        android:background="@color/signup_color"
        android:text="Add a reminder"
        android:textAllCaps="false"
        android:textColor="@color/white"/>

</RelativeLayout>
